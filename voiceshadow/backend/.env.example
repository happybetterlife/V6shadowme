# Database Configuration
USE_SQLITE_DB=true
OFFLINE_MODE=false

# Feature Flags
ENABLE_TREND_COLLECTION=true
ENABLE_SCHEDULER=true
ENABLE_GOOGLE_TRENDS=false
ENABLE_NEWS_API=true
ENABLE_REDDIT_API=true
USE_MOCK_DATA=false

# Trend Collection Settings
TREND_COLLECTION_INTERVAL=2
TRENDS_CACHE_DURATION=3600

# API Configuration
# NewsAPI - Get free API key from https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here

# Reddit API - Create app at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Google Trends (currently restricted by Google)
GOOGLE_TRENDS_GEO=united_states

# Optional: Additional API keys for future integrations
# TWITTER_BEARER_TOKEN=your_twitter_bearer_token
# YOUTUBE_API_KEY=your_youtube_api_key

# Database
DATABASE_URL=sqlite:///./database/data/trends.db

# Firebase
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App Settings
DEBUG=True
ALLOWED_HOSTS=["localhost", "127.0.0.1"]