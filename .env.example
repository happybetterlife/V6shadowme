# OpenAI API Key (Replace with your actual key)
OPENAI_API_KEY=sk-your-new-key-here

# Database
DATABASE_URL=sqlite:///./app.db

# Development Settings
DEBUG=False
LOG_LEVEL=INFO

# Voice Processing
VOICE_SAMPLE_RATE=22050
VOICE_MAX_DURATION=30

# OpenVoice Model Paths
OPENVOICE_CHECKPOINT=checkpoints/openvoice_v2.pth
OPENVOICE_CONFIG=configs/openvoice_v2.json

# Whisper Settings
WHISPER_MODEL=base

# File Paths
MODELS_PATH=./models
DATA_PATH=./data
LOGS_PATH=./logs

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_ACTIVE_SESSIONS=100

# Learning Parameters
DEFAULT_DIFFICULTY=intermediate
MAX_CORRECTIONS_PER_SESSION=5
SHADOWING_SENTENCES_PER_LEVEL=10

# Audio Processing
BONE_CONDUCTION_ENABLED=True
AUDIO_CHUNK_SIZE=1024