rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Voice models collection - users can only access their own models
    match /voice_models/{modelId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.user_id;
    }
    
    // Voice samples collection - users can only access samples from their models
    match /voice_samples/{sampleId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == get(/databases/$(database)/documents/voice_models/$(resource.data.voice_model_id)).data.user_id;
      allow create: if request.auth != null && 
        request.auth.uid == get(/databases/$(database)/documents/voice_models/$(request.resource.data.voice_model_id)).data.user_id;
    }
    
    // Voice generations collection - users can only access their own generations
    match /voice_generations/{generationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.user_id;
    }
    
    // Shadowing sessions collection - users can only access their own sessions
    match /shadowing_sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.user_id;
    }
    
    // User progress collection - users can only access their own progress
    match /user_progress/{progressId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.user_id;
    }
    
    // Analytics collection - users can only access their own analytics
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.user_id;
    }
    
    // Admin collection - only admin users can access
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Public collections (if any) - read access for authenticated users
    match /public/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // No public writes
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
